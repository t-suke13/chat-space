.wrapper
  .chat-side
    .side-ber_user-name
      .top-items
        = current_user.name
        .top-items__name      
        .top-items__icon
          .logo-first
          =link_to new_group_path do
            = icon('fa','edit')
          .logo-second
          =link_to edit_user_path(current_user) do
            = icon('fa','cog')

    .groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__group-name
            =group.name
          .group__latest-message
            = group.show_last_message

